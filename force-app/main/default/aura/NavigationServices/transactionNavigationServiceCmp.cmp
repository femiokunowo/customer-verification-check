<!--
Description:    A reusable Lightning Component that can be embedded in any CRV Lightning Component 
    to generate the deep link URL
Attributes:     transactionId – The enterprise transaction ID for the servicing workflow
                ECN – Enterprise Customer Number
Event Handlers: None
-->

<aura:component implements="lightning:isUrlAddressable" controller="TransactionNavigationServiceCC">
        
    <!--servicing workflow specific attributes  -->
    <aura:attribute name="transactionId" type="String" />
    <aura:attribute name="ECN" type="String" />	   
    
    <!-- attributes used for business logic within Navigation Services Component  -->     
    <aura:attribute name="navigationUrl" type="String" access="public" />

    <aura:method name="getServicingWorkflowUrl" description="Get target URL of servicing workflow">
        <aura:attribute name="transactionId" type="String" />
        <aura:attribute name="ECN" type="String" />	
    </aura:method>

    <aura:method name="doNavigate" description="Navigation Handler for Servicing Workflow">       
    </aura:method>
    
    <!-- add handler event    -->
    <aura:handler name="init" value="{!this}" action="{!c.getWorkflowUrl}" />     
    <a href="{!v.navigationUrl}" target="_blank" >{!v.navigationUrl}</a>
    <br/>
 
  
</aura:component>